{
  "environment_name": "dsHPC-imaging",
  "display_name": "DataSHIELD HPC Environment for dsImaging",
  "docker_stack_prefix": "dshpc-imaging",
  "base_repository": "https://github.com/isglobal-brge/dsHPC-core.git",
  "default_api_port": 8001,
  "default_admin_port": 8002,
  "description": "Provides DataSHIELD-compatible functions for imaging analysis using the dsHPC infrastructure.",
  "resource_requirements": {
    "min_memory_gb": 16,
    "recommended_memory_gb": 32,
    "min_cpus": 4,
    "recommended_cpus": 8,
    "system_reserved_mb": 4096,
    "notes": "Imaging workloads (lungmask, radiomics) require substantial memory. Recommended: Docker Desktop with at least 16GB RAM allocated.",
    "memory_guardian": {
      "enabled": true,
      "pause_threshold_pct": 40,
      "critical_threshold_pct": 20,
      "resume_threshold_pct": 55,
      "check_interval_seconds": 2,
      "kill_cooldown_seconds": 10,
      "notes": "Memory Guardian v2.0 - Tuned for imaging workloads. More aggressive thresholds (40/20/55) and faster response (2s check, 10s cooldown) to handle memory-heavy radiomics jobs."
    }
  },
